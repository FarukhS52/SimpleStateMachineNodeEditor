 <Styles xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style Selector="ToggleButton.NodeHeaderButton">
	<Setter Property="Background" Value="{DynamicResource ColorNodeHeaderButton}"/>
	<Setter Property="BorderBrush" Value="{DynamicResource ColorNodeHeaderButton}"/>
    <Setter Property="Template">
      <ControlTemplate>
		  <Path  Stroke="{TemplateBinding BorderBrush}" Fill="{TemplateBinding Background}" Data="M0,6 L6,0 L12,6 Z" 
				 HorizontalAlignment="Center" VerticalAlignment="Center">
		  </Path>		
	  </ControlTemplate>
    </Setter>
  </Style>
	 
	 <Style Selector="ToggleButton:pointerover.NodeHeaderButton Path">
		 <Setter Property="Fill" Value="{DynamicResource ColorNodeHeaderButtonPointerOver}"/>
	 </Style>
	 
	 <Style Selector="ToggleButton[IsChecked=true].NodeHeaderButton Path">
		 <Style.Animations>
			 <Animation Duration="0:0:0.3" FillMode="Both">
				 <KeyFrame Cue="100%">
					 <Setter Property="RotateTransform.Angle" Value="180"/>
				 </KeyFrame>
			 </Animation>
		 </Style.Animations>
	 </Style>

	 <Style Selector="ToggleButton[IsChecked=false].NodeHeaderButton Path">
		 <Style.Animations>
			 <Animation Duration="0:0:0.3" FillMode="Both">
				 <KeyFrame Cue="100%">
					 <Setter Property="RotateTransform.Angle" Value="0"/>
				 </KeyFrame>
			 </Animation>
		 </Style.Animations>
	 </Style>
 </Styles>