<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="SimpleStateMachineNodeEditorAvalonia.Views.RightConnector" ClipToBounds="False" HorizontalAlignment="Stretch" HorizontalContentAlignment="Right" Background="{DynamicResource ColorRightConnectorBackground}">
	<Grid x:Name="GridConnector" ColumnDefinitions="*, Auto, Auto" ClipToBounds="False" >
		<!--Background="#00000000"-->
		<TextBox x:Name="TextBoxConnector" 
				 Grid.Column="1" 
				 Classes="EmptyTextBox TextBoxRightConnector"
				 HorizontalAlignment="Right" 
				 VerticalAlignment="Center" 
				 Margin="5,0" 
				 Text="Test"/>
		<Ellipse x:Name="EllipseConnector" 
				 Grid.Column="2" 
				 Classes="EllipseConnector EllipseRightConnector" 
				 HorizontalAlignment="Right" 
				 VerticalAlignment="Center" 
				 Height="12" 
				 Width="12" 
				 Margin="0,0,-7,0"
				 StrokeThickness="1" />
	</Grid>
		<!--<UserControl.ContextMenu>
			<ContextMenu>
				<MenuItem Header="Copy" />
			</ContextMenu>
		</UserControl.ContextMenu>-->
</UserControl>
