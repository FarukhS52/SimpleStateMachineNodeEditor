<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="SimpleStateMachineNodeEditorAvalonia.Views.RightConnector" ClipToBounds="False" HorizontalAlignment="Stretch" HorizontalContentAlignment="Right">
	<Grid x:Name="GridConnector" ColumnDefinitions="Auto, Auto" ClipToBounds="False" >
		<!--Background="#00000000"-->
		<TextBox x:Name="TextBoxConnector" Classes="EmptyTextBox" Grid.Column="0"
				 HorizontalAlignment="Right" VerticalAlignment="Center" 
				 Margin="5,0,5,3" Text="Test"/>
		<Ellipse x:Name="EllipseConnector" Grid.Column="1" 
				 HorizontalAlignment="Right" VerticalAlignment="Center" 
				 Height="12" Width="12" Margin="0,0,-7,0"
				 StrokeThickness="1" Fill="Orange"/> 
	</Grid>
</UserControl>
