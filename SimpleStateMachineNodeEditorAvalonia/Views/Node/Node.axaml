<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SimpleStateMachineNodeEditorAvalonia.Views.Node"
			 xmlns:Views="clr-namespace:SimpleStateMachineNodeEditorAvalonia.Views"
			 xmlns:NodesElements="clr-namespace:SimpleStateMachineNodeEditorAvalonia.Views.NodesElements">
	<Border x:Name="BorderNode" CornerRadius="5,5,5,5" BorderThickness="1,1,1,1" Background="Green" >
			<Grid RowDefinitions="auto, auto, auto, *">
				<NodesElements:Header x:Name="HeaderNode" Grid.Row="0"/>
				<Views:LeftConnector x:Name="InputNode" Grid.Row="1"/>
				<Views:RightConnector x:Name="OutputNode" Grid.Row="2"/>
				<NodesElements:Transitions x:Name="Transitions" Grid.Row="3"/>
			</Grid>
	</Border>
</UserControl>
