<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             x:Class="SimpleStateMachineNodeEditorAvalonia.Views.NodeElements.Header" 
             ClipToBounds="False" 
             HorizontalAlignment="Stretch">
	<Border x:Name="BorderHeader" 
	        CornerRadius="5,5,0,0" 
	        Background="{DynamicResource ColorNodeHeaderBackground}" >
		<Grid ColumnDefinitions="*, auto" HorizontalAlignment="Stretch">
			<TextBox x:Name="TextBoxHeader"  
			         Classes="EmptyTextBox TextBoxHeader" 
			         Text="Header" 
			         Padding="0,3" 
			         Grid.Column="0"  
			         IsHitTestVisible="False"
			         Margin="10,0,0,0" />
			<ToggleButton x:Name="ToggleButtonHeader" 
			              Grid.Column="1" 
			              Classes="NodeHeaderButton" 
			              HorizontalContentAlignment="Center" 
			              VerticalContentAlignment="Center" 
			              Margin="5" />
		</Grid>
	</Border>
</UserControl>

