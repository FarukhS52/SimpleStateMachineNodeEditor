<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200"
             x:Class="SimpleStateMachineNodeEditorAvalonia.Views.Node"
             Classes="Node"
			 xmlns:Views="clr-namespace:SimpleStateMachineNodeEditorAvalonia.Views"
			 xmlns:NodeElements="clr-namespace:SimpleStateMachineNodeEditorAvalonia.Views.NodeElements" ClipToBounds="False">
	<Border x:Name="BorderNode" CornerRadius="5" BorderThickness="1"  Background="{DynamicResource ColorNodeBackground}"  MinWidth="60"  Focusable="True">
		<Grid RowDefinitions="auto, 16, 5,auto, *" ClipToBounds="False" Margin="0,0,0,5" >
			<NodeElements:Header x:Name="Header" Grid.Row="0" />
			<Border Background="Transparent" x:Name="InputConnectorMagnetBorder" Grid.Row="1"  Height="30" Width="30" HorizontalAlignment="Left" CornerRadius="15" Margin="-17">
			</Border>
			<Views:LeftConnector x:Name="InputConnector" Grid.Row="1" />
			<Views:RightConnector x:Name="OutputConnector" Grid.Row="3"/>
			<NodeElements:Connectors x:Name="Connectors" Grid.Row="4"/>
		</Grid>
	</Border>
	<UserControl.RenderTransform>
		<TranslateTransform/>
	</UserControl.RenderTransform>
</UserControl>
