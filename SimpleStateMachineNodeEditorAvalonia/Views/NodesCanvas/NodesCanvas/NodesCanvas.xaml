<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:Views="clr-namespace:SimpleStateMachineNodeEditorAvalonia.Views"
			 xmlns:NodesCanvasElements="clr-namespace:SimpleStateMachineNodeEditorAvalonia.Views.NodesCanvasElements"
             x:Class="SimpleStateMachineNodeEditorAvalonia.Views.NodesCanvas" DragDrop.AllowDrop="True">

	<Grid  x:Name="GridNodesCanvas" Background="{DynamicResource ColorNodesCanvasBackground}">
		<NodesCanvasElements:Nodes x:Name="NodesNodesCanvas" />
		<NodesCanvasElements:Connects x:Name="ConnectsNodesCanvas" />
		<Views:Selector x:Name="SelectorNodesCanvas" />
		<Views:Cutter x:Name="CutterNodesCanvas" />
	</Grid>
