<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <AvaloniaResource Include="Assets\**" />
    <AvaloniaResource Remove="Icons\**" />
    <AvaloniaXaml Remove="Icons\**" />
    <Compile Remove="Icons\**" />
    <EmbeddedResource Remove="Icons\**" />
    <Folder Include="Styles\Node\Header\" />
	<Folder Include="Styles\Extensions\" />
    <None Remove="Icons\**" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Styles\CornerRadius.xaml" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.9.12" />
    <PackageReference Include="Avalonia.Desktop" Version="0.9.12" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="0.9.12" />
    <PackageReference Include="ReactiveUI.Fody" Version="11.5.17" />
  </ItemGroup>
  <ItemGroup>
    <AvaloniaResource Update="Styles\CornerRadius.xaml">
      <Generator>MSBuild:Compile</Generator>
    </AvaloniaResource>
  </ItemGroup>
</Project>
