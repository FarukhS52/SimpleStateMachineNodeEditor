<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <AvaloniaResource Include="Assets\**" />
    <AvaloniaResource Remove="Icons\**" />
    <AvaloniaXaml Remove="Icons\**" />
    <Compile Remove="Icons\**" />
    <EmbeddedResource Remove="Icons\**" />
    <Folder Include="Styles\Connector\LeftConnector\" />
    <Folder Include="Styles\Connector\RightConnector\" />
    <Folder Include="Styles\Connect\" />
    <Folder Include="Styles\Node\Header\" />
	<Folder Include="Styles\Extensions\" />
	<Folder Include="Styles\Themes" />
    <None Remove="Icons\**" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.9.12" />
    <PackageReference Include="Avalonia.Desktop" Version="0.9.12" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="0.9.12" />
    <PackageReference Include="Dock.Model" Version="0.9.9" />
    <PackageReference Include="Pharmacist.Common" Version="1.8.1" PrivateAssets="all" />
    <PackageReference Include="Pharmacist.MSBuild" Version="1.8.1" />
    <PackageReference Include="ReactiveUI.Fody" Version="11.5.26" />
  </ItemGroup>
